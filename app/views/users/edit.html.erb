<%= form_for @user, url: user_path(@user) do |f| %>
<% if @user.errors.any? %>
<ul>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>
Email: <%= f.email_field :email %> <br />
Username: <%= f.text_field :username %> <br />
Password: <%= f.password_field :password, value:@user[:password] %> <br />
<%= f.submit %>
<% end %>